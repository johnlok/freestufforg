<%= form_for(@item, remote: true, :html => { :multipart => true, :id => 'listing_form' }) do |f| %>
  <% if @item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% @item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :location %><br>
    <%= f.text_field :location %>
  </div>
  <div class="field">
    <%= f.label :expiry_date %><br>
    <%= f.date_select :expiry_date %>
  </div>
  <div class="field">
    <%= f.label :lister_email %><br>
    <%= f.text_field :lister_email %>
  </div>
  <div class="field">
    <%= f.label :lister_tel %><br>
    <%= f.text_field :lister_tel %>
  </div>
  <div class="field">
    <%= f.label :sms_notify %><br>
    <%= f.check_box :sms_notify %>
  </div>
  <div class="field">
    <%= f.label :image %><br>
    <%= f.file_field :image %>
  </div>
  <div class="actions" id="submitListing">
    <%= f.submit %>
  </div>
<% end %>
